extends ../layout

block content
    div(class="d-flex flex-row content mx-auto")
        div(class="profile-container")
            include ../includes/profile
        div(class="flex-fill")
            form(class="card" method="post" action="/api/tweets")
                div(class="card-header") Write a tweet
                    div(class="card-body")
                        div(class="mb-3")
                            textarea(class="form-control" name="content" placeholder="what is happening")
                        div(class="W-100")
                            input(type="submit" value="Send" class="btn btn-primary ms-auto d-block")